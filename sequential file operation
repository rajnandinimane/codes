#include<iostream>
#include<string>
#include<fstream>
using namespace std;

class Inventory{
	public : 
	char name[10];
	string id;
	int quantity;
	double price ;

	
	void accept();
	void display();
	
};
void Inventory :: accept()	{
	
	cout<<"Enter the name of item : ";
	cin>>name;

    cout<<"Enter the id : ";
    cin>>id;
    cout<<"Enter the quantity of item : ";
    cin>>quantity;
    cout<<"Enter the Price Per item : ";
    cin>>price;   
}

void Inventory :: display()	{
	
	cout<<"\nName : "<<name;
    cout<<"\nID  of Item : "<<id;
    cout<<"\nQuantity : "<<quantity;
    cout<<"\nPrice : "<<price;
    cout<<"\nTotal Price : "<<quantity*price;
}

int main(){
	int n;
	cout<<"Enter the number of item you want to add in Inverntory : ";
	cin>>n;
	
	Inventory item[n];
	fstream file;
	
	file.open("Stock.txt", ios :: out);
	
	cout<<"\nEnter the detail of 3 items : \n";
	for(int i=0;i<n;i++){
		
		item[i].accept();
		file.write((char*)&item[i], sizeof(item[i]));
		cout<<endl;
   }
   file.seekg(0);
   
   cout<<"Displaying Information: ";
   
   for(int i=0;i<n;i++){
	   
	   file.read((char*) & item[i],sizeof(item[i]));
	   
	   item[i].display();
	   cout<<endl;
   }
   
   file.close();
   
   return 0;
}
